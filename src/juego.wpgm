import wollok.game.*
import personajes.*
import cosas.*
import gm.*

program game {
	/********************************************* CONFIG *********************************************/
	game.title("BattleRun")
	game.height(12)
	game.width(28)
	var nivelActual = nivel1
	
	var personaje = new Principal(vida = 1000, armadura = 0, danio = 15, position = game.at(2,2), image = "PLAYER.png")
	
	const juego = {nivel =>
		if(nivel.esFinal()){
				game.addVisual(personaje)
				game.say(personaje, "FIN DEL JUEGO: GANASTE!")
				nivel.terminarJuego()
				}
				
		nivel.setearTodo(personaje)
		game.onTick(1000, "pasar de nivel", {=>
			if(nivel.superado()){
					game.say(personaje, "NIVEL SUPERADO")
					nivelActual = nivel.siguienteNivel()
					game.clear()
					juego.apply(nivelActual)
					}
			}) 
	}
	
	juego.apply(nivelActual)
										
	game.start()
}
	
		
		
		
		
		
		
		
		
		
		
		
